#==============================================================#
#               .zshrc                                         #
#==============================================================#

ZSHDIR=$HOME/.zsh

#--------------------------------------------------------------#
##          Base Configuration                                ##
#--------------------------------------------------------------#
source "$ZSHDIR/base.zsh"

#--------------------------------------------------------------#
##          Options                                           ##
#--------------------------------------------------------------#
source "$ZSHDIR/option.zsh"

#--------------------------------------------------------------#
##          Completion                                        ##
#--------------------------------------------------------------#
source "$ZSHDIR/completion.zsh"

#--------------------------------------------------------------#
##          Aliases                                           ##
#--------------------------------------------------------------#
source "$ZSHDIR/alias.zsh"

#--------------------------------------------------------------#
##          Key Bindings                                      ##
#--------------------------------------------------------------#
source "$ZSHDIR/bindkey.zsh"

#--------------------------------------------------------------#
##          Plugin                                            ##
#--------------------------------------------------------------#
source "$ZSHDIR/plugin.zsh"

#--------------------------------------------------------------#
##          Plugin                                            ##
#--------------------------------------------------------------#
source "$ZSHDIR/local.zsh"

